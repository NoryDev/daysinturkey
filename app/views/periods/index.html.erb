      <h3>All your Stays since <%= Date.today - 179 %> included</h3>
      <p class="text-muted">If you where in Turkey on <%= Date.today - 179 %> please enter this stay as well.</p>
      <%= simple_form_for(Period.new) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_day, as: :string, input_html: {class: "first_day"} %>
          <%= f.input :last_day, as: :string, input_html: {class: "last_day"} %>
        </div>
        <div>
          Time spent: <span id="time-spent" ></span>
        </div>

        <!-- <div class="form-actions">
          <%= f.button :submit %>
        </div> -->
      <% end %>

      <!-- All Stays -->
      <% if user_signed_in? %>
        <h4>All your stays</h4>
        <table class="table table-bordered table-condensed">
          <thead>
            <tr>
              <th>First day</th>
              <th>Last day</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% current_user.periods.each do |p| %>
              <tr>
                <td><%= p.first_day %></td>
                <td><%= p.last_day %></td>
                <td><%= link_to 'Show', p %></td>
                <td><%= link_to 'Edit', edit_period_path(p) %></td>
                <td><%= link_to 'Destroy', p, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% end %>

      <br>
      time spent: <span id="time_spent"></span><%#= current_user.time_spent(Date.today) %>
      <br>
      remaining time: <%#= current_user.remaining_time %>

      <p><%= link_to 'New Period', new_period_path %></p>

      <h4>check: all stays at all</h4>

      <% @periods.each do |p| %>
        <p>
          <%= p.user %> |
          <%= p.first_day %> |
          <%= p.last_day %>
        </p>
      <% end %>

    </div>
  </div>
</div>

