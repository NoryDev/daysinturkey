<ul class="list-group">
  <li class="list-group-item">
    <div class="row">
      <div class="top-right">
        <%= link_to root_path do %>
          <i class="fa fa-times"></i>
        <% end %>
      </div>
      <div class="padded-mini">
        <%= simple_form_for period do |f| %>
          <%= f.error_notification %>
          <%= f.input :zone, as: :hidden, value: period.zone %>
          <div class="col-xs-5">
            <%= f.input :first_day, label: "Entry Date", label_html: { class: "sr-only" }, as: :string, input_html: { type: "date", class: "first_day input-sm", required: "required", value: form_date_format(period.first_day)}, placeholder: "Entry Date" %>
          </div>
          <div class="col-xs-5">
            <%= f.input :last_day, label: "Exit Date", label_html: { class: "sr-only" }, as: :string, input_html: { type: "date", class: "last_day input-sm", required: "required", value: form_date_format(period.last_day) }, placeholder: "Exit Date" %>
          </div>
          <div class="col-xs-2">
            <button type="submit" class="btn btn-success btn-sm"><small><i class="fa fa-check"></i></small></button>
          </div>
        <% end %>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 text-center">
        <span class="text-small">
            <%= link_to 'Cancel', root_path %>
        </span>
      </div>
    </div>
  </li>
</ul>