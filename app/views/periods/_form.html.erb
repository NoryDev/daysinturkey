<% first_day = period.first_day.strftime("%B %d, %Y") if period.first_day %>
<% last_day = period.last_day.strftime("%B %d, %Y") if period.last_day %>
<% id = period.id || 0 %>

<%= simple_form_for(period, remote: true) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs form-inline">
    <%= f.input :first_day, label: "Entry Date", label_html: {class: "sr-only"}, as: :string, input_html: {id: "period-#{id}-first-day", class: "first_day", value: first_day, required: "required"}, placeholder: "Entry Date" %>
    <%= f.input :last_day, label: "Exit Date", label_html: {class: "sr-only"}, as: :string, input_html: {id: "period-#{id}-last-day", class: "last_day", value: last_day, required: "required"}, placeholder: "Exit Date" %>

    <button id="period-#{id}-submit" type="submit" class="btn btn-success stay_submit" disabled="disabled"><i class="fa fa-check fa-fw"></i></button>
  </div>

<% end %>
