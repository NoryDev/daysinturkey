<%= simple_form_for @period do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :first_day, label: "Entry Date", label_html: {class: "sr-only"}, as: :string, input_html: { class: "first_day input-sm", required: "required", value: date_format(@period.first_day)}, placeholder: "Entry Date" %>
    <%= f.input :last_day, label: "Exit Date", label_html: {class: "sr-only"}, as: :string, input_html: { class: "last_day input-sm", required: "required", value: date_format(@period.last_day)}, placeholder: "Exit Date" %>

    <%= f.input :zone, collection: ZONES, as: :radio_buttons %>

    <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-check fa-fw"></i></button>
  </div>

<% end %>
